<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/payment_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="android.widget.RelativeLayout">

    <com.checkout.sdk.carddetails.CardDetailsView
        android:id="@+id/card_details_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.checkout.sdk.view.BillingDetailsView
        android:id="@+id/billing_details_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

</merge>
